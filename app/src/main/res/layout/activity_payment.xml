<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activites.PaymentActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textPriceTotal" android:textSize="36sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textReceivingNode" android:textSize="36sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textPaymentInfo" android:textSize="36sp"/>
        <Button
                android:text="@string/not_enough_available_funds"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonPayRequest"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>