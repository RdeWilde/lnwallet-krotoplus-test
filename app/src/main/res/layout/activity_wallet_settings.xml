<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activites.settings.WalletSettingsActivity">
    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>
    <TextView
            android:text="Wallet name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lndNameLabel"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/walletName" android:hint="My Wallet"/>
    <TextView
            android:text="Lightning hostname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lndHostLabel"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="90dp" tools:layout_editor_absoluteX="64dp" android:id="@+id/lnHost"
            android:hint="127.0.0.1:10009"/>
    <Button
            android:text="Select certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonSelectCertificate"/>
    <Button
            android:text="Select macaroon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonSelectMacaroon"/>
    <Button
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonAdd"/>
</LinearLayout>
